<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/gradient"
    android:paddingTop="80dp"
    android:paddingStart="50dp"
    android:paddingEnd="50dp"
    android:paddingBottom="30dp"
    tools:context="pl.tcps.tcps.activity.LoginActivity">

<ProgressBar
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:visibility="visible"
    android:layout_centerInParent="true"
    />

    
    <ImageView
        android:id="@+id/login_activity_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_local_gas_station_login_activity_24dp" />

    <TextView
        android:id="@+id/login_activity_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_activity_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/russo_one"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/login_activity_et_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_activity_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/edit_text_login_label"
        android:inputType="text"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login_activity_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_activity_et_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="@string/edit_text_password_label"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/login_activity_button_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#375419"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        android:layout_below="@+id/login_activity_et_password"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/button_login_label"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/login_activity_button_registration"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#375419"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/button_registration_label"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <!--<com.facebook.login.widget.LoginButton-->
            <!--android:id="@+id/login_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:textSize="24sp" />-->

</RelativeLayout>