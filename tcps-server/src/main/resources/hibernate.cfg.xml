<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/tcpsdb</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <mapping class="pl.tcps.dbEntities.ConsortiumsEntity"/>
    <mapping class="pl.tcps.dbEntities.HistoricPricesEntity"/>
    <mapping class="pl.tcps.dbEntities.PetrolPricesEntity"/>
    <mapping class="pl.tcps.dbEntities.PetrolStationsEntity"/>
    <mapping class="pl.tcps.dbEntities.RatingsEntity"/>
    <mapping class="pl.tcps.dbEntities.UsersEntity"/>
    <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>